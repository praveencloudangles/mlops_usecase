pipeline{
    agent any
    stages{
        stage("Loading the data"){
            steps{
                sh 'python3 data_loading.py'
            }
        }
        stage("Analysing the data"){
            steps{
                sh 'python3 data_analysis.py'
            }}
        stage("cleansing the data"){
            steps{
                sh 'python3 data_cleaning.py'
            }}
        stage("Data visualization"){
            steps{
                sh 'python3 data_visualization.py'
            }}
        stage("Feature Engineering"){
            steps{
                sh 'python3 feature_engineering.py'
            }}

        stage("Preparing your artifact"){
            steps{
                sh 'python3 cleaned_dataset.py'
            }}
    }
     post{
       
        always {
            archiveArtifacts artifacts: 'cleaned_data.csv', onlyIfSuccessful: true
        }
            }
}